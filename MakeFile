#Makefile
include .env
PARAMS_FILE := $(strip $(params))
EXPERIMENT := $(shell cat $(PARAMS_FILE) | shyaml get-value run_name)
DATASETS := $(shell cat $(PARAMS_FILE) | shyaml get-value data.dataset)


all: embeddings homology clustering selection vis
	@echo "Run Complete"

setup:
	@echo "Writing Config Files"
	@python src/setup.py

embeddings: setup
	@echo "Generating Embeddings"
	@python src/scripts/parallelize_embeddings.py

homology:
	@echo "Generating Persistence Diagrams"
	@python scripts/homology_generator.py

clustering:
	@echo "Computing Topolical Distances"
	@python scripts/clustering_generator.py

selection:
	@echo "Selecting Embeddings"
	@python scripts/selection_generator.py

vis:
	@echo "Generating Visualizations"
	@python scripts/embedding_visualizations.py
	@python scripts/clustering_visualizations.py
clean:
	@rm -rf data/${DATA_SET}/${EXPERIMENT}/

